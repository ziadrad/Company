@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@{
    var user = await UserManager.FindByIdAsync(User.Claims.FirstOrDefault().Value);
    var roles = await UserManager.GetRolesAsync(user);
    var getrole = await RoleManager.FindByNameAsync(roles.First());
    var role_claims = await RoleManager.GetClaimsAsync(getrole);


}

<h1>All Departments</h1>

@if (!string.IsNullOrEmpty(@TempData["Message"] as string))
{
    <div class="m-3 alert alert-success ">
        <p>@TempData["Message"]</p>
    </div>
}

<form>
    <div>
        <div class="d-flex justify-content-center align-items-center">
            <input placeholder="Search By Name" name="SearchInput" id="SearchInput" class="form-control w-50 mx-2 " />
            <input type="submit" class=" btn btn-success " value="Search" />
        </div>

    </div>
</form>

                @if (role_claims.Where(c => c.Type == "CreatePermission").FirstOrDefault().Value.ToLower() == "true")
                        {
<a asp-action="Create" asp-controller="Department" class="btn btn-primary my-5">Create Department </a>
                        }

@if(Model.Count()>0){
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
           @foreach( var ITem in Model){
               <tr>
                   <td>
                        @ITem.Code
                    </td>
                    <td>
                        @ITem.Name
                    </td>
                    <td>
                        @ITem.CreateAt
                    </td>
                    <partial name="BtnPartialView" model="@ITem.Id.ToString()" />

               </tr>
           }
        </tbody>
    </table>
}else{
    <div class="bg-warning rounded">
        <h4 class="p-3">
            There is No Departments
        </h4>
    </div>
}

