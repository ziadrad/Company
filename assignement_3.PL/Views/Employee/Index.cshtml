@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}


<h1>All Employees</h1>


@if (!string.IsNullOrEmpty(@TempData["Message"] as string))
{
    <div class="m-3 alert alert-success ">
        <p>@TempData["Message"]</p>
    </div>
}

<partial name="Search_partial_view" />

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary my-5">Add Employee </a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>image</th>
                <th>id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>Department</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if(item.ImageName is not null){
                        <td><img src="~/files/images/@item.ImageName" alt="@item.Name" class=" imag-fluid rounded-circle w-100" /></td>

                    }
                    else{
                        <td> no image</td>

                    }
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreateAt</td>

                    @if(@item.DepartmentId is null)
                    {
                        <td>No Department</td>
                    }
                    else{
                    <td>@item.Department?.Name</td>
                    }
                    <partial name="BtnPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="bg-warning rounded">
        <h4 class="p-3">
            There is No Employee
        </h4>
    </div>
}

