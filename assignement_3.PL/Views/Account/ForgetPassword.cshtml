@model ForgetPasswordDto
@{
	ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_AuthLauout.cshtml";
}



		<div asp-validation-summary="All" class=" m-3 text-danger">
	<div></div>
		</div>
<form asp-action="ForgetPassword" method="post">

	<label class="form-check-label ">
		Method
	</label>
	<div class="form-check">
		<input class="form-check-input" type="radio" asp-for="action" id="EmailMethod" value="EmailMethod">
		<label class="form-check-label " for="EmailMethod">
			Email
		</label>
	</div>
	<div class="form-check">
		<input class="form-check-input" type="radio" asp-for="action" id="SmsMethod" value="SmsMethod" checked>
		<label class="form-check-label" for="SmsMethod">
			Sms
		</label>
	</div>
	<div class="mb-3">
		<label asp-for="Email" class="form-label">Email address</label>
		<input type="email" class="form-control" asp-for="Email" required>
	</div>
	
	<div class="d-grid">
		<button type="submit" class="btn btn-primary">Login</button>
	</div>

</form>
	
	
<p class="my-2"> have an Account? <a asp-action="SignIn" class="text-decoration-none">  Login ? </a></p>


@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}