<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>

            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>

                <td>
                    @foreach (var role in item.Roles)
                    {
                        <span>@role</span>
                    }
                </td>
                <partial name="BtnPartialView" model="@item.Id" />

            </tr>
        }
    </tbody>
</table>